<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ParamsSetingActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/paramset_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10sp"
        android:text="@string/paramset_title_string"
        android:textSize="24sp" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/paramset_mainString"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/paramset_mainstring_kit"
            android:paddingLeft="10sp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/paramset_spareString"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/paramset_sparestring_kit"
            android:paddingLeft="10sp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/paramset_positiveKey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/paramset_positive_key_kit"
            android:paddingLeft="10sp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/paramset_negativeKey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/paramset_negative_key_kit"
            android:paddingLeft="10sp" />
    </android.support.design.widget.TextInputLayout>

    <Switch
        android:id="@+id/paramset_positiveEnable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10sp"
        android:text="@string/paramset_positive_enable"
        android:textSize="24sp" />

    <Switch
        android:id="@+id/paramset_negativeEnable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10sp"
        android:text="@string/paramset_negative_enable"
        android:textSize="24sp" />

    <Button
        android:id="@+id/paramset_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/paramset_mode_buttunname" />

    <Button
        android:id="@+id/paramset_src"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/paramset_src_buttunname" />

    <Button
        android:id="@+id/paramset_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/paramset_descriptions" />

</LinearLayout>