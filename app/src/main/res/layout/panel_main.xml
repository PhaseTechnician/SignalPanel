<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="@dimen/panel_main_height"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:background="@color/colorPrimaryDark">

    <ImageView
        android:layout_width="@dimen/panel_main_image_width"
        android:layout_height="@dimen/panel_main_image_height"
        android:layout_gravity="center_vertical"
        app:srcCompat="@drawable/ic_menu_gallery" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/panel_main_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:layout_weight="0.7"
                tools:text="EXamp" />

            <TextView
                android:id="@+id/panel_main_author"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                tools:text="author" />
        </LinearLayout>

        <TextView
            android:id="@+id/panel_main_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="descasdeafsdxsfasasfasf" />
    </LinearLayout>
</LinearLayout>