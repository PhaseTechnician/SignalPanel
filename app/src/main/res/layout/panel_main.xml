<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/panel_main_height"
    android:background="@color/colorPrimaryDark"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/panel_main_delet"
        android:layout_width="@dimen/panel_main_image_width"
        android:layout_height="@dimen/panel_main_image_height"
        android:layout_marginLeft="-64dp"
        android:cropToPadding="false"
        android:src="@drawable/ic_delete" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="5dp"
        app:contentPadding="2dp">

        <ImageView
            android:layout_width="@dimen/panel_main_image_width"
            android:layout_height="@dimen/panel_main_image_height"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="0dp"
            app:srcCompat="@drawable/ic_panel" />

        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/panel_main_image_width"
            android:gravity="top|left"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/panel_main_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:layout_weight="0.7"
                    android:gravity="left" />

                <TextView
                    android:id="@+id/panel_main_author"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginRight="40dp"
                    android:layout_weight="0.3"
                    android:gravity="left" />
            </LinearLayout>

            <TextView
                android:id="@+id/panel_main_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <ImageButton
        android:id="@+id/panel_main_config"
        android:layout_width="@dimen/panel_main_image_width"
        android:layout_height="@dimen/panel_main_image_height"
        android:layout_marginRight="64dp"
        android:src="@drawable/ic_config" />

</LinearLayout>